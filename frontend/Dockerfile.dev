# Frontend Development Dockerfile
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Expose development server port
EXPOSE 3000

# Set environment variables
ENV REACT_APP_API_URL=http://localhost:5000
ENV NODE_ENV=development

# Start development server
CMD ["npm", "start"]